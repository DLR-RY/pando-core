<pando
  version="1.2.0"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema-instance"
  xsd:noNamespaceSchemaLocation="http://www.dlr.de/schema/pando/pando.xsd">

  <service name="test">
    <parameters>
      <!-- Required for the Event definition -->
      <parameter name="Report ID" uid="s5_report_id" type="uint16" />
    </parameters>
    
    <events>
      <event name="Event" uid="event">
        <reportId>0</reportId>
        <severity>low</severity>
        <packetClasses>
          <class>Event</class>
        </packetClasses>
        <parameters></parameters>
      </event>
    </events>
    
    <telemetries>
      <telemetry name="Telemetry Packet" uid="tm1">
        <serviceType>0</serviceType>
        <serviceSubtype>0</serviceSubtype>
        <packetClasses>
          <class>Housekeeping</class>
        </packetClasses>
        <parameters>
        </parameters>
      </telemetry>
      
      <telemetry name="Telemetry Packet" uid="tm2">
        <serviceType>0</serviceType>
        <serviceSubtype>0</serviceSubtype>
        
        <parameters>
        </parameters>
      </telemetry>
    </telemetries>
    
    <telecommands>
    </telecommands>
  </service>

  <mapping name="test" subsystem="0">
    <telecommandParameters>
    </telecommandParameters>
    
    <application name="Test Application" apid="0x1">
      <events>
        <event sid="Event" uid="event" />
      </events>
      
      <telemetries>
        <!-- Packet class is set in packet definition -->
        <telemetry uid="tm1" sid="TM1A">
        </telemetry>
        
        <!-- Packet class is set in packet definition and overwritten
             during mapping -->
        <telemetry uid="tm1" sid="TM1B">
          <packetClasses>
            <class>Extended Housekeeping</class>
            <class>Realtime</class>
          </packetClasses>
        </telemetry>
        
        <!-- Packet class is only added during mapping -->
        <telemetry uid="tm2" sid="TM2A">
          <packetClasses>
            <class>Extended Housekeeping</class>
          </packetClasses>
        </telemetry>

        <!-- No packet class information -->
        <telemetry uid="tm2" sid="TM2B">
          <generation>
          </generation>
        </telemetry>
      </telemetries>
      
      <telecommands>
      </telecommands>
    </application>
  </mapping>
</pando>
